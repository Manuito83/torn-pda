<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rw_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_dark"
    android:padding="8dp">

    <!-- HEADER -->
    <RelativeLayout android:id="@+id/rw_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView android:id="@+id/rw_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="#9E9E9E"
            android:textSize="10sp"
            tools:text="14:25 LT" />
        <LinearLayout android:id="@+id/rw_chaining_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/chaining_indicator_background"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView android:id="@+id/rw_header_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAINING"
                android:textColor="#F44336"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <FrameLayout android:id="@+id/rw_reload_box"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <ImageView android:id="@+id/rw_icon_reload"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_reload"
                android:visibility="visible" />
            <ProgressBar android:id="@+id/rw_icon_reload_active"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rw_header"
        android:layout_centerInParent="true">

        <!-- ================== UPCOMING ================== -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rw_upcoming_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout android:id="@+id/rw_upcoming_border_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="0dp">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/widget_rw_background_dark"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView android:id="@+id/rw_upcoming_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/swords" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="War "
                            android:textColor="#E0E0E0"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView android:id="@+id/rw_upcoming_countdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#E0E0E0"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            tools:text="02d 20h" />
                    </LinearLayout>

                    <TextView android:id="@+id/rw_upcoming_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9E9E9E"
                        android:textSize="8sp"
                        tools:text="Jan 25, 15:00" />

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView android:id="@+id/rw_upcoming_player_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#42A5F5"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:text="[XXX]" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" vs "
                            android:textColor="#9E9E9E"
                            android:textSize="10sp" />

                        <TextView android:id="@+id/rw_upcoming_enemy_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#EF5350"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:text="Enemy" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- ================== ACTIVE ================== -->
        <LinearLayout android:id="@+id/rw_active_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            tools:visibility="gone">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView android:id="@+id/rw_active_player_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E0E0E0"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="[XXX]" />
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView android:id="@+id/rw_active_enemy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#E0E0E0"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Enemy Faction" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView android:id="@+id/rw_active_player_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:textColor="#4CAF50"
                    tools:text="1,234" />
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView android:id="@+id/rw_active_enemy_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:textColor="#F44336"
                    tools:text="1,100" />
            </LinearLayout>
            <ProgressBar android:id="@+id/rw_active_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="2dp"
                android:progressDrawable="@drawable/ranked_war_progress_bar"
                tools:max="2500"
                tools:progress="134" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">
                <TextView android:id="@+id/rw_active_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BDBDBD"
                    android:textSize="8sp"
                    tools:text="134 / 2,500" />
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView android:id="@+id/rw_active_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BDBDBD"
                    android:textSize="8sp"
                    tools:text="5.4%" />
            </LinearLayout>
        </LinearLayout>

        <!-- ================== FINISHED ================== -->
        <RelativeLayout android:id="@+id/rw_finished_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone"
            tools:visibility="gone">

            <LinearLayout android:id="@+id/rw_finished_border_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:background="@drawable/widget_rw_background_dark">

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView android:id="@+id/rw_finished_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            tools:src="@drawable/trophy" />

                        <TextView android:id="@+id/rw_finished_winner_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="XXX" />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|start"
                            android:orientation="vertical">

                            <TextView android:id="@+id/rw_finished_player_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#42A5F5"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="[XXX]" />

                            <TextView android:id="@+id/rw_finished_player_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="2,501" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|end"
                            android:orientation="vertical">

                            <TextView android:id="@+id/rw_finished_enemy_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#EF5350"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Enemy" />

                            <TextView android:id="@+id/rw_finished_enemy_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="1,845" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- ================== NO WAR ================== -->
        <LinearLayout android:id="@+id/rw_no_war_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone">
            <TextView android:id="@+id/rw_no_war_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                tools:text="No ranked war data" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>