<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rw_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp">

    <!-- Header: Contains icons and last updated text -->
    <RelativeLayout
        android:id="@+id/rw_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/rw_header_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/swords" />

        <TextView
            android:id="@+id/rw_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/rw_reload_box"
            android:layout_toEndOf="@id/rw_header_icon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="11sp"
            tools:text="12:34 LT" />

        <RelativeLayout
            android:id="@+id/rw_reload_box"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rw_icon_reload"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/icon_reload"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/rw_icon_reload_active"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rw_header_layout"
        android:paddingTop="4dp">

        <!-- Upcoming War Layout -->
        <LinearLayout
            android:id="@+id/rw_upcoming_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/rw_countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="1d 12h 30m" />

            <TextView
                android:id="@+id/rw_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textSize="11sp"
                tools:text="24 Jan at 13:00" />
        </LinearLayout>

        <!-- Active War Layout -->
        <LinearLayout
            android:id="@+id/rw_active_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Faction Names -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rw_player_faction_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="[TAG]" />

                <TextView
                    android:id="@+id/rw_enemy_faction_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Enemy Faction Name" />
            </LinearLayout>

            <!-- Scores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rw_player_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#008000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="1,234" />

                <TextView
                    android:id="@+id/rw_enemy_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#C60303"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="1,100" />
            </LinearLayout>

            <!-- Progress Bar Container with text overlay -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="2dp">

                <ProgressBar
                    android:id="@+id/rw_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:progressDrawable="@drawable/ranked_war_progress_bar"
                    tools:progress="60" />

                <TextView
                    android:id="@+id/rw_progress_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1.5"
                    tools:text="134 / 2500" />
            </RelativeLayout>

            <!-- Percentage Text (goes below the progress bar) -->
            <TextView
                android:id="@+id/rw_percentage_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="10sp"
                tools:text="5.4%" />
        </LinearLayout>

        <!-- No War Layout -->
        <LinearLayout
            android:id="@+id/rw_no_war_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/rw_no_war_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No active war"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>